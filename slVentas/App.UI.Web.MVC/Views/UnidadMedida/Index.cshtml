@model IEnumerable<App.Entities.Base.UnidadMedida>
@{
    ViewBag.Title = "Unidades de medida";
}

<h2>Unidades de medida</h2>

@Html.ActionLink("Nueva unidad de medida", "Create", "UnidadMedida", new { @class = "btn btn-success" })

<table class="table table-bordered">
    <tr>
        <th>Nombre</th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>
                <a href="@Url.Action("Edit", new {id=item.UnidadMedidaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>