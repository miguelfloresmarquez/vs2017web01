@model IEnumerable<App.Entities.Base.Categoria>
@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>Lista de Categoria</h2>

@*sin usar HTML Helper*@
@*<a class="btn btn-success" href="/Categoria/Create">Nueva Categoría</a>*@

@*usando HTML Helper*@
@Html.ActionLink("Nueva categoría", "Create", "Categoria", new {@class= "btn btn-success"})

<table class="table table-bordered">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit", new {id=item.CategoriaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>