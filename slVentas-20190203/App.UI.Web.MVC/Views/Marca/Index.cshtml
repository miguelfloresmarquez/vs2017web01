@model IEnumerable<App.Entities.Base.Marca>
@{
    ViewBag.Title = "Lista de Marcas";
}

<h2>Lista de Marcas</h2>

@Html.ActionLink("Nueva marca", "Create", "Marca", new { @class = "btn btn-success" })
<table class="table table-bordered">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Acción</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit", new {id=item.MarcaID})">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

